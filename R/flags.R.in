RcppArrayFireCxxFlags <- function(){
	paste( '-I"', system.file( "include", package = "RcppArrayFire" ), '" ', '@AF_INCLUDE@', sep = "" )
}

RcppArrayFireLdFlags <- function(){
    RcppArrayFire.libs.dir <- system.file( "libs", package = "RcppArrayFire")
    flags <- paste( RcppArrayFire.libs.dir, .Platform$file.sep, "RcppArrayFire", .Platform$dynlib.ext , sep="" )
	paste( '@AF_LIBS@ ', flags, ' -Wl,-rpath,', RcppArrayFire.libs.dir, sep = "" )
}

CxxFlags <- function(){
	cat( RcppArrayFireCxxFlags() )
}

LdFlags <- function(){
	cat( RcppArrayFireLdFlags() )
}
